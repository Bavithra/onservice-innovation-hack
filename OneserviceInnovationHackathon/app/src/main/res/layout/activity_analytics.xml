<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AnalyticsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="#F1F8FE"
        android:layout_marginLeft="20dp"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/phone"
            android:layout_width="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/phonecall"
            android:layout_marginLeft="30dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/phone"
            android:textColor="#3893DC"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="+65 76875623"/>
        <TextView
            android:id="@+id/mobile_number"
            android:layout_below="@id/phone_number"
            android:layout_width="200dp"
            android:textColor="#4998DA"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/phone"
            android:layout_marginLeft="10dp"
            android:text="Mobile"/>
        <ImageView
            android:id="@+id/gointo_mobile"
            android:layout_width="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/rightarrow"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F1F8FE"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/mail"
            android:layout_width="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/mail"
            android:layout_marginLeft="30dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/mail_id"
            android:textColor="#3893DC"
            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/mail"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="john12@gmail.com"/>
        <TextView
            android:id="@+id/home"
            android:layout_below="@id/mail_id"
            android:layout_width="200dp"
            android:textColor="#4998DA"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/mail"
            android:layout_marginLeft="10dp"
            android:text="Home"/>
        <ImageView
            android:id="@+id/gointo_mail"
            android:layout_width="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/rightarrow"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"/>
    </RelativeLayout>


</LinearLayout>